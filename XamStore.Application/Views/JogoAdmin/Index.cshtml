@model IEnumerable<XamStore.Domain.Entities.Cadastro.Jogo>

@{
    ViewBag.Title = "Cadastro de Jogos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@Html.Partial("MenuAdmin");
<div class="col-md-8">
    <div class="content-right">
        <h2>Cadastro de Jogos</h2>
        <hr />
        <p>
            @Html.ActionLink("Novo Jogo", "Cadastrar", null, new { @class = "btn btn-default" })
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Multiplayer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jogadores)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Classificacao)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Multiplayer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogadores)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Classificacao) Anos
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", "Admin/JogoAdmin", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                        @Html.ActionLink("Deletar", "Deletar", "Admin/JogoAdmin", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </table>
    </div>
    </div>