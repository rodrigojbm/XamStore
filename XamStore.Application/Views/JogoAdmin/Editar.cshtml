@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(function () {
        var i = 1;
        $('.add').click(function (e) {

            $(".imagens").append("<input type=\"file\" name=\"images[" + i + "]\" /><br />");
            $(".imagens").append("<img");
            i++;
            return false;
        });
    });
</script>
