@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model XamStore.Domain.Entities.Cadastro.Endereco

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<!-- start top_bg -->
<div class="top_bg">
    <div class="wrap">
        <div class="main_top">
            <h4 class="style">Meus Dados</h4>
        </div>
    </div>
</div>
<div class="main_bg">
    <div class="wrap">
        <div class="main">
            <div style="width:20%;float:left;margin-left:1.1%">
                @Html.Partial("MenuPessoa");
            </div>

            <div style="width:38%;float:left;margin-left:1%;">
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">Novo Endereço</div>
                    <script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
                    <script type="text/javascript">
                       jQuery(function ($) {
                           $('#Cep').mask('99999-999');
                       });
                       $(function () {
                           $("#Cep").blur(function () {
                               var cep = $(this).val().replace(/[^0-9]/, '');
                               if (cep !== "") {
                                   var url = 'http://cep.correiocontrol.com.br/' + cep + '.json';
                                   $.getJSON(url, function (json) {
                                       $("#Logradoruro").val(json.logradouro);
                                       $("#Bairro").val(json.bairro);
                                   });
                               }
                           });
                       });
                    </script>
                    @using (@Html.BeginForm("CadastrarEndereco", "Pessoa", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="registration_form" style="padding:15px;">
                            @Html.ValidationSummary(true)
                            <div>
                                <label>
                                    @Html.TextBoxFor(model => model.Cep, new { placeholder = "Cep" })
                                    @Html.ValidationMessageFor(model => model.Cep)
                                </label>
                            </div>
                            <div>
                                <label>
                                    @Html.TextBoxFor(model => model.Logradouro, new { placeholder = "Logradouro" })
                                    @Html.ValidationMessageFor(model => model.Logradouro)
                                </label>
                            </div>
                            <div>
                                <label>
                                    @Html.TextBoxFor(model => model.Complemento, new { placeholder = "Complemento" })
                                    @Html.ValidationMessageFor(model => model.Complemento)
                                </label>
                            </div>
                            <div>
                                <label>
                                    @Html.TextBoxFor(model => model.Numero, new { placeholder = "Nº" })
                                    @Html.ValidationMessageFor(model => model.Numero)
                                </label>
                            </div>
                            <div>
                                <label>
                                    @Html.TextBoxFor(model => model.Bairro, new { placeholder = "Bairro" })
                                    @Html.ValidationMessageFor(model => model.Bairro)
                                </label>
                            </div>
                            <div>
                                <label>
                                    @Html.DropDownList("IdCidade", ViewBag.cCidade as SelectList, null, new { style = "padding:10px;border:1px solid #ccc;color:#999;" })
                                    @Html.ValidationMessageFor(model => model.IdCidade)
                                </label>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cadastrar" class="btn btn-default" style="float:right" />
                                    <div style="clear:both"></div>
                                </div>
                            </div>
                        </div>
                    }
                    <div style="clear:both"></div>
                </div>
            </div>
            <div style="width:38%;float:left;margin-left:1%">
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">Endereços cadastrados</div>
                    <!-- List group -->
                    <ul class="list-group">
                        @{
                            var enderecos = ViewBag.Enderecos as ICollection<XamStore.Domain.Entities.Cadastro.Endereco>;
                        }
                        <table class="table">
                            <tr>
                                <th style="background:#f4f4f4;">
                                    #
                                </th>
                                <th style="background:#f4f4f4;">
                                    Endereço
                                </th>
                                <th style="background:#f4f4f4;">
                                    Cep
                                </th>
                                <th style="background:#f4f4f4;">
                                    Cidade
                                </th>
                                <th style="background:#f4f4f4;">
                                    Ações
                                </th>
                            </tr>

                            @{
                                if (enderecos != null)
                                {
                                    foreach (var endereco in enderecos)
                                    {
                                        <tr>
                                            <td>@endereco.Id</td>
                                            <td>@endereco.Logradouro</td>
                                            <td>@endereco.Cep</td>
                                            <td>@endereco.Cidade.Nome</td>
                                            <td>@Html.ActionLink("Excluir", "ExcluirEndereco", "Pessoa", new { id = endereco.Id }, null)</td>
                                        </tr>
                                    }
                                }
                            }
                        </table>
                    </ul>
                </div>
            </div>
            <div style="clear:both"></div>
        </div>
    </div>
</div>