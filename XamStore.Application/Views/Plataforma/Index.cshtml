@model IEnumerable<XamStore.Domain.Entities.Cadastro.Plataforma>
@{
    ViewBag.Title = "Cadastro de Plataforma";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("MenuAdmin");
<div class="col-md-8">
    <div class="content-right">
        <h2>Cadastro de Plataforma</h2>
        <p>
            @Html.ActionLink("Nova Plataforma", "Cadastrar", null, new { @class = "btn btn-default" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                        @Html.ActionLink("Deletar", "Deletar", "Admin/Plataforma", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </table>
    </div>
    </div>
