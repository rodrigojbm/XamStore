@model XamStore.Domain.Entities.Cadastro.Plataforma
@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("MenuAdmin");

<div class="content-right">
    <h2>Cadastro de Plataforma</h2>
    <hr />
    <h4>Deseja deletar esta Plataforma?</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <br />
            <br />
            @{
                var produtos = ViewBag.Produtos;
                if (produtos.Count > 0)
                {
                    <div style="color:#ff0000">
                        No momento, você não pode deletar esta Plataforma, pois existe produtos vinculados a ela.<br />
                    </div>
                }
            }
        </dl>
        @using (Html.BeginForm("Deletar", "Admin/Plataforma"))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.AntiForgeryToken()


            <div class="form-actions no-color">
                <input type="submit" value="Deletar" class="btn btn-default @if (produtos.Count > 0) { @Html.Raw("disabled"); }" style="float:right" />
            </div>
            <br />
            @Html.ActionLink("Voltar", "Index")
        }
    </div>
</div>