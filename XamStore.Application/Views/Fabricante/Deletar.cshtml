@model XamStore.Domain.Entities.Cadastro.Fabricante
@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("MenuAdmin");

<div class="content-right">
    <h2>Cadastro de fabricante</h2>
    <hr />
    <h4>Deseja deletar este fabricante?</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            @{
                var produtos = ViewBag.Produtos;
                if (produtos.Count > 0)
                {
                    <div style="color:#ff0000">
                        No momento, você não pode deletar este fabricante, pois existe produtos vinculados a ele.<br />
                        Para poder deletar é necessário Remover os seguintes produtos:<br /><br />
                        @foreach (var produto in produtos)
                        {
                            <div style="color:#000000">@produto.Id - @produto.Descricao</div>
                        }
                    </div>
                }
            }
        </dl>
        @using (Html.BeginForm("Deletar", "Admin/Fabricante"))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Deletar" class="btn btn-default @if (produtos.Count > 0) { @Html.Raw("disabled"); }" style="float:right" />
            </div>
            <br />
            @Html.ActionLink("Voltar", "Index")
        }
    </div>
</div>