@model IEnumerable<XamStore.Domain.Entities.Cadastro.Fabricante>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("MenuAdmin");
<div class="col-md-8">
    <div class="content-right">
        <h2>Cadastro de Fabricante</h2>
        <p>
            @Html.ActionLink("Novo Fabricante", "Cadastrar", null, new {@class = "btn btn-default"})
        </p>
        <table class="table table-hover table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome):
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sobre):
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sobre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new {id = item.Id}, new {@class = "btn btn-default btn-sm"})
                        @Html.ActionLink("Deletar", "Deletar", "Admin/Fabricante", new {id = item.Id}, new {@class = "btn btn-danger btn-sm"})
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
