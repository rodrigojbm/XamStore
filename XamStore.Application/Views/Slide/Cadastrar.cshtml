@model XamStore.Domain.Entities.Cadastro.Slide

@{
    ViewBag.Title = "Cadastro de slide";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("MenuAdmin");
<div class="content-right">
    <h2>Cadastro de usuário</h2>


    @using (Html.BeginForm("Cadastrar", "Admin/Slide", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="control-label col-md-2"><b>Imagem</b></div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.File, new { @type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.File)

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdProduto, "Produto", new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("cProduto", "---------selecione--------")
                    @Html.ValidationMessageFor(model => model.IdProduto)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Voltar para lista", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>