@model XamStore.Domain.Entities.Cadastro.Slide
@{
    ViewBag.Title = "Deletar Slide";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("MenuAdmin");

<div class="col-md-8">
    <div class="content-right">
        <h2>Cadastro de Slide</h2>
        <hr />
        <h4>Deseja deletar este Slide?</h4>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Produto.Nome):
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Produto.Nome)
                </dd>
            </dl>
            @using (Html.BeginForm("Deletar", "Slide"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                <div class="form-actions no-color">
                    <input type="submit" value="Deletar" class="btn btn-default" style="float:right" />

                </div>
                <br /><br />
                @Html.ActionLink("Voltar para lista", "Index", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</div>