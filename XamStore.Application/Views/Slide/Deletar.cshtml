@model XamStore.Domain.Entities.Cadastro.Slide
@{
    ViewBag.Title = "Deletar slide";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("MenuAdmin");

<div class="content-right">
    <h2>Cadastro de slide</h2>
    <hr />
    <h4>Deseja deletar este slide?</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Produto.Descricao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Produto.Descricao)
            </dd>
        </dl>
        @using (Html.BeginForm("Deletar", "Admin/Slide"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)
            <div class="form-actions no-color">
                <input type="submit" value="Deletar" class="btn btn-default" style="float:right" />

            </div>
            <br /><br />
            @Html.ActionLink("Voltar para lista", "Index")
        }
    </div>
</div>