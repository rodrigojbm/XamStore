@model XamStore.Domain.Entities.Cadastro.Usuario
@{
    ViewBag.Title = "Deletar Usuario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Partial("MenuAdmin");

<div class="content-right">
    <h2>Cadastro de usuário</h2>
    <hr/>
    <h4>Deseja deletar este usuário?</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UsuarioNivel)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UsuarioNivel.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Login)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Login)
            </dd>
        </dl>
        @using (Html.BeginForm("Deletar", "Usuario"))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Deletar" class="btn btn-default" style="float: right"/>
            </div>
            <br/>
            @Html.ActionLink("Voltar", "Index")
        }
    </div>
</div>

