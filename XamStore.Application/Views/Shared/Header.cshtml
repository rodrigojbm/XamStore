@using XamStore.Domain.Entities.Sistema

<!-- start header -->
<div class="top_bg">
    <div class="wrap">
        <div class="header">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")" class="logo-principal">MulMurc TITLE</a>
            </div>

            @if (Session["Autenticacao"] != null)
            {
                var profile = (SessionAutenticacaoClient)Session["Autenticacao"];
                <div class="log_reg">
                    <ul>
                        <li style="color: #fff">Olá @profile.Nome</li>
                        <span style="color:#fff;">|</span>
                        @Html.ActionLink("Meus dados", "Perfil", "Pessoa")
                        <span style="color:#fff;">|</span>
                        <li>@Html.ActionLink("Sair", "Sair", "Login")</li>

                    </ul>
                </div>
            }
            else
            {
                <div class="log_reg">
                    <ul>
                        <li>@Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "btn btn-sm"})</li>
                        <div class="clear"></div>
                    </ul>
                </div>

                <div class="log_reg">
                    <ul>
                        <li>@Html.ActionLink("Entrar", "Index", "Login", null, new { @class = "btn btn-sm" })</li>
                        <div class="clear"></div>
                    </ul>
                </div>
            }
            <div class="clear"></div>
        </div>
    </div>
</div>
<!-- start header_btm -->
