<script type="text/javascript">
    function validateEmail($email) {
        var emailReg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
        return emailReg.test($email);
    }
    $(function () {
        $(".cad_news").click(function () {
            var email = $("#email_news").val();
            if (email === "") {
                $(".new_result").html("Email inválido");
                return false;
            }

            if (!validateEmail(email)) {
                $(".new_result").html("Email inválido");
                return false;
            }

            $.ajax({
                type: "POST",
                url: "home/CadastrarNews",
                data: { email: $("#email_news").val() },
                success: function (data) {
                    if (data === "0") {
                        $(".new_result").css("color", "red").html("Email já cadastrado");
                    } else {
                        $(".new_result").css("color", "darkgreen").html(data);
                        $("#email_news").val("");
                    }
                }
            });

            return false;
        });
    });
</script>
