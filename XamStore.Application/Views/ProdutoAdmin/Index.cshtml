@model IEnumerable<XamStore.Domain.Entities.Cadastro.Produto>

@{
    ViewBag.Title = "Cadastro de Produtos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@Html.Partial("MenuAdmin");
<div class="content-right" style="float:right;margin-right:500px;"> <!--testar os floats-->
    <h2>Cadastro de Produtos</h2>
    <hr />
    <p>
        @Html.ActionLink("Novo produto", "Cadastrar")
    </p>
    <table class="table">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>

                    @Html.ActionLink("Editar", "Editar", "Admin/ProdutoAdmin", new { id = item.Id }, null) |
                    @Html.ActionLink("Deletar", "Deletar", "Admin/ProdutoAdmin", new { id = item.Id }, null)

                </td>
            </tr>
        }

    </table>
</div>