@model XamStore.Domain.Entities.Cadastro.Produto
@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Partial("MenuAdmin");

<div class="content-right">
    <h2>Cadastro de produtos</h2>
    <hr />
    <h4>Deseja deletar este produto?</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Peso)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Peso)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Garantia)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Garantia)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Preco)
            </dd>
        </dl>
        @using (Html.BeginForm("Deletar", "Admin/Produto"))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Deletar" class="btn btn-default" style="float:right" />
            </div>
            <br />
            @Html.ActionLink("Voltar", "Index")
        }
    </div>
</div>